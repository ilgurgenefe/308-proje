<%- include("partials/_header") %>
   <!-- body -->
   <body class="main-layout inner_page">
      <!-- loader  -->
      <div class="loader_bg">
         <div class="loader"><img src="/images/loading.gif" alt="#"/></div>
      </div>
      <!-- end loader -->
     
      <%- include("partials/_menu") %>
      <!-- about -->
      <div class="about">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <div class="titlepage text_align_left">
                <h2> 
                  <%= a_news.name %>
                </h2>

                <p>
                   <%= a_news.description %> 
                </p>
                <a class="read_more" href="/user/<%= a_news.user._id %>">
                  Created By: <%= a_news.user.username %></a>


                  <% if(isOwner) { %>

                  <div style= "margin-top: 30px ;">
                    <ul style="display: flex; justify-content: space-between;">
                    <li> <button style= "min-width: 266px;" class="read-more"
                      data-toggle="modal" data-target="#updateModal"
                      
                      >Update</button></li>
                    <li> <a style= "min-width: 266px;" class="read-more" href="/news/<%= a_news._id %>/?_method=DELETE"
                      onclick="return confirm('Do you want to delete this news')"
                      >Delete</a></li>
                    </ul>
                  </div>

                <% } %>


              </div>
            </div>
            <div class="col-md-6">
              <div class="about_img">
                <figure><img style="z-index:1" src="<%= a_news.url %>" alt="<%= a_news.name %>"/></figure>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- end about -->
      <!-- end footer -->

      <div id= "updateModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div style="margin-top: 50px; margin-bottom: 50px;" class="container">
            <div class="row">
              <div class="col-md-12 ">
                <div class="text_align_center">
                  <h2 style="
                  font-size: 30px;
                  margin-bottom: 20px;
                  color: #D43A8E;
              ">Add New News</h2>
                </div>
              </div>
              <div class="col-md-10 offset-md-1">
                <form id="request" class="main_form" method="POST" action="/news/<%= a_news._id %>?_method=PUT" 
                  enctype="multipart/form-data">
                  <div class="row">
                    <div class="col-md-12">
                      <input value="<%= a_news.name %>" class="form_control" placeholder="Name" type="text" name="name">
                    </div>
                    <div class="col-md-12">
                      <textarea name="description" style="height: 150px;" class="form_control"
                        placeholder="Description" rows="5"><%= a_news.description %></textarea>
                    </div>

                    <div style="margin-bottom: 20px ;" class="col-md-12">
                      <input type="file" name="image" class="form-control-file">
                    </div>

                    <div class="col-md-12">
                      <div class="group_form">
                        <button class="read_more">Update News</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

      <%- include("partials/_footer") %>